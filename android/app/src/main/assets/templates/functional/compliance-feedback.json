{
  "id": "compliance-feedback",
  "name": "Compliance & Feedback",
  "version": "1.0",
  "description": "Regulatory compliance, audits, and feedback tracking",
  "category": "functional",
  "icon": "verified",
  "color": "#EF4444",
  "capturePrompts": [
    {
      "field": "regulation",
      "prompt": "Which regulation/standard?",
      "required": false
    },
    {
      "field": "deadline",
      "prompt": "Compliance deadline?",
      "required": false
    },
    {
      "field": "severity",
      "prompt": "Severity level?",
      "required": false
    }
  ],
  "suggestionRules": [
    {
      "trigger": "audit",
      "action": "suggest_priority",
      "priority": 2
    },
    {
      "trigger": "deadline",
      "action": "suggest_reminder",
      "priority": 2
    },
    {
      "trigger": "violation",
      "action": "suggest_priority",
      "priority": 3
    }
  ],
  "execution": {
    "signifiers_enabled": true,
    "default_signifier": "task",
    "migration_prompt_days": [1, 3, 7],
    "weekly_review": true,
    "monthly_review": true,
    "auto_threading": true,
    "stale_task_threshold_days": 2
  }
}
